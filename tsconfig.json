{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./web",
    "rootDir": "./web",
    "moduleResolution": "node"
  },
  "include": ["web/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
